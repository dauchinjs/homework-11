<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/style/style.css">
    <link href="https://unpkg.com/tailwindcss@2.2.4/dist/tailwind.min.css" rel="stylesheet">
    <title>Stock Market</title>
</head>
<body>
<script src="//unpkg.com/alpinejs" defer></script>
<nav style="background-color: rgb(12, 74, 110)"
     class="flex items-center justify-between flex-wrap bg-white py-4 lg:px-12 shadow border-solid border-t-2 border-blue-700">
    <div class="flex justify-between lg:w-auto w-full lg:border-b-0 pl-6 pr-2 border-solid border-b-2 border-gray-300 pb-5 lg:pb-0">
        {% if auth.name is same as (null) %}
            <div class="flex items-center flex-shrink-0 text-gray-800 mr-16">
                <span class="font-semibold text-xl tracking-tight" style="color: white"></span>
            </div>
        {% else %}
            <div class="menu w-full lg:block flex-grow lg:flex lg:items-right lg:w-auto lg:px-3 px-8 text-red-800">
                Welcome, {{ auth.name }}
            </div>
        {% endif %}
        <div class="block lg:hidden ">
            <button
                    id="nav"
                    class="flex items-center px-3 py-2 border-2 rounded text-blue-700 border-blue-700 hover:text-blue-700 hover:border-blue-700">
                <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>
                        Menu</title>
                    <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/>
                </svg>
            </button>
        </div>
    </div>

    <div class="menu w-full lg:block flex-grow lg:flex lg:items-center lg:w-auto lg:px-3 px-8">
        <div class="text-md font-bold text-red-800 lg:flex-grow search_space">
            <a href="/"
               class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                Home
            </a>
            <a href="/?symbol=TSLA"
               class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                Tesla
            </a>
            <a href="/?symbol=NVDA"
               class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                NVIDIA
            </a>
            <a href="/?symbol=MA"
               class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                Mastercard
            </a>
            <a href="/?symbol=KO"
               class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                Coca-Cola
            </a>
            <a href="/?symbol=NKE"
               class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                Nike
            </a>
            <a href="/?symbol=DIS"
               class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                Walt Disney
            </a>
            <a href="/?symbol=UPS"
               class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                UPS
            </a>
            <a href="/?symbol=NFLX"
               class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                Netflix
            </a>
            <a href="/?symbol=PYPL"
               class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                PayPal
            </a>
            <a href="/?symbol=AAPL"
               class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                Apple
            </a>
        </div>

        {% if auth.name is same as (null) %}
            <div class="menu w-full lg:block flex-grow lg:flex lg:items-right lg:w-auto lg:px-3 px-8 text-red-800">
                <a href="/register"
                   class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                    Register
                </a>
                <a href="/login"
                   class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                    Login
                </a>
            </div>
        {% else %}
            <div class="menu w-full lg:block flex-grow lg:flex lg:items-right lg:w-auto lg:px-3 px-8 text-red-800">
                <a href="/profile"
                   class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                    Profile
                </a>
                <a href="/logout"
                   class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded hover:bg-red-800 mr-2">
                    Logout
                </a>
            </div>
        {% endif %}
    </div>
</nav>

<section class="text-red-900 body-font">
    <div class="container px-5 py-5 mx-auto">
        {% block content %}{% endblock %}
    </div>
</section>

</body>
</html>